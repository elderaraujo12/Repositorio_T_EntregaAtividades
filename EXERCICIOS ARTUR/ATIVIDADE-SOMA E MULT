Algoritmo "jogo-da-soma"
// Disciplina   : [Linguagem e Lógica de Programação]
// Professor   : Hiram Amaral 
// Descrição   : O programa irá rodar enquanto você acertar a soma
// Autor(a)    : Artur
// Data atual  : 30/03/2022

Var

    n1, n2, n3, equacao, acertos, resposta, soma: inteiro

Inicio

    acertos <- -1

    enquanto (resposta = equacao )faca
      n1 <- randi(30)
      n2 <- randi(30)
      n3 <- randi(30)
      
      soma <- n1 + n2
      equacao <- soma * n3
      
      escreva("Quanto é(", n1, " + ", n2, ")x", n3,"? ")
      leia(resposta)
      acertos <- acertos + 1

    fimenquanto

    escreva("THE END GAME!")
    escreva("Sua quantidade de acerto foi: ", acertos)

Fimalgoritmo
